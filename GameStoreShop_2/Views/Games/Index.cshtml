@using GameStoreShop_2.Models

@addTagHelper *, GameStoreShop_2


<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />

    @{
        ViewBag.Title = "Товары";
    }
    
    
</head>
<body>
    <div class="main">       
        @foreach (var p in @Model.Items)
        {
            <div class="well">
                <h3>
                    <strong>@p.name</strong>
                    <span class="pull-right label label-primary">@p.price.ToString("# руб")</span>
                </h3>
                <span class="lead">@p.description</span>
            </div>
        }

        <div class="pagination">
            @if (Model.PageInfo.TotalPages > 1)
            {
                for (int i = 1; i <= Model.PageInfo.TotalPages; i++)
                {
                    if (i == Model.PageInfo.CurrentPage)
                    {
                        <a class="active" href="@Url.Action("Index", new { page = i })"><h1>@i</h1></a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", new { page = i })"><h1>@i</h1</a>
                    }
                }
            }
        </div>    
    </div>
</body>

